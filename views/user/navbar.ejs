    <style>
        :root {
            --primary: #0d6efd;
            --primary-dark: #0b5ed7;
            --secondary: #6c757d;
            --success: #198754;
            --light: #f8f9fa;
            --dark: #212529;
            --hospital-blue: #17a2b8;
            --hospital-green: #28a745;
        }
        
        * {
            font-family: 'Roboto', sans-serif;
        }
        
        h1, h2, h3, h4, h5, h6 {
            font-family: 'Poppins', sans-serif;
            font-weight: 600;
        }
        
        body {
            line-height: 1.6;
            color: #333;
        }
        
        .navbar-brand {
            font-weight: 700;
            font-size: 1.8rem;
            color: var(--primary) !important;
        }
        
        .navbar-brand span {
            color: var(--hospital-blue);
        }
        
        .hero-section {
            background: linear-gradient(rgba(0, 0, 0, 0.85), rgba(13, 110, 253, 0.9)),black ;
            background-size: cover;
            background-position: center;
            color: rgb(255, 255, 255);
            padding: 120px 0 100px;
        }
        
        .hero-title {
            font-size: 3.5rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
        }
        
        .hero-subtitle {
            font-size: 1.8rem;
            margin-bottom: 2rem;
            font-weight: 300;
        }
        
        .btn-hero {
            background-color: var(--hospital-green);
            border-color: var(--hospital-green);
            color: white;
            padding: 12px 30px;
            font-weight: 500;
            border-radius: 30px;
        }
        
        .btn-hero:hover {
            background-color: #218838;
            border-color: #1e7e34;
            color: white;
        }
        
        .section-title {
            font-size: 2.2rem;
            font-weight: 700;
            margin-bottom: 3rem;
            position: relative;
            color: var(--dark);
        }
        
        .section-title:after {
            content: '';
            position: absolute;
            width: 80px;
            height: 4px;
            background-color: var(--primary);
            bottom: -10px;
            left: 0;
            border-radius: 2px;
        }
        
        .section-title.center:after {
            left: 50%;
            transform: translateX(-50%);
        }
        
        .card-icon {
            font-size: 2.5rem;
            color: var(--primary);
            margin-bottom: 1rem;
        }
        
        .feature-card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            transition: transform 0.3s ease;
            height: 100%;
        }
        
        .feature-card:hover {
            transform: translateY(-10px);
        }
        
        .stats-section {
            background-color: var(--light);
            padding: 80px 0;
        }
        
        .stat-item {
            text-align: center;
            padding: 20px;
        }
        
        .stat-number {
            font-size: 3rem;
            font-weight: 700;
            color: var(--primary);
            margin-bottom: 0.5rem;
        }
        
        .stat-text {
            font-size: 1.2rem;
            color: var(--secondary);
            font-weight: 500;
        }
        
        .testimonial-card {
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            padding: 30px;
            height: 100%;
            border-top: 5px solid var(--primary);
        }
        
        .testimonial-text {
            font-style: italic;
            margin-bottom: 1.5rem;
        }
        
        .patient-img {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            object-fit: cover;
            margin-right: 15px;
        }
        
        .blog-card {
            border: none;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            transition: transform 0.3s ease;
            height: 100%;
        }
        
        .blog-card:hover {
            transform: translateY(-10px);
        }
        
        .blog-img {
            height: 200px;
            object-fit: cover;
            width: 100%;
        }
        
        .blog-date {
            font-size: 0.9rem;
            color: var(--secondary);
        }
        
        .appointment-section {
            background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('https://images.unsplash.com/photo-1519494026892-80bbd2d6fd0d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1153&q=80');
            background-size: cover;
            background-position: center;
            color: white;
            padding: 80px 0;
        }
        
        .footer {
            background-color: var(--dark);
            color: white;
            padding: 60px 0 20px;
        }
        
        .footer-links a {
            color: #ddd;
            text-decoration: none;
            display: block;
            margin-bottom: 8px;
            transition: color 0.3s;
        }
        
        .footer-links a:hover {
            color: white;
        }
        
        .copyright {
            border-top: 1px solid #444;
            padding-top: 20px;
            margin-top: 40px;
            text-align: center;
            color: #aaa;
            font-size: 0.9rem;
        }
        


        .tag {
                  background: #f3f5ff;
                  width: 95%;
                  color: #333;
                  border-radius: 8px;
                  font-size: 11px;
                  padding: 6px 10px;
                  display: inline-block;
}
.contact-hero {
