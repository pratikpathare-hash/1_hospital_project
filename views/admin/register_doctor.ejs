
    <script>
        // DOM Elements
        const mobileToggle = document.getElementById('mobileToggle');
        const adminSidebar = document.getElementById('adminSidebar');
        const addDoctorBtn = document.getElementById('addDoctorBtn');
        const doctorsListBtn = document.getElementById('doctorsListBtn');
        const addDepartmentBtn = document.getElementById('addDepartmentBtn');
        const pageTitle = document.getElementById('pageTitle');
        const pageInfo = document.getElementById('pageInfo');
        const contentTitle = document.getElementById('contentTitle');
        const dynamicContent = document.getElementById('dynamicContent');

        // Toggle sidebar for mobile
        mobileToggle.addEventListener('click', () => {
            adminSidebar.classList.toggle('open');
        });

        // Navigation item click handlers
        function setActiveNavItem(clickedItem) {
            // Remove active class from all nav items
            document.querySelectorAll('.nav-item').forEach(item => {
                item.classList.remove('active');
            });
            
            // Add active class to clicked item
            clickedItem.classList.add('active');
            
            // Close sidebar on mobile after selection
            if (window.innerWidth <= 992) {
                adminSidebar.classList.remove('open');
            }
        }

        // Add Doctor Navigation
        addDoctorBtn.addEventListener('click', (e) => {
            e.preventDefault();
            setActiveNavItem(addDoctorBtn);
            
            // Update page content
            pageTitle.textContent = 'Add New Doctor';
            pageInfo.textContent = 'Register New Doctor';
            contentTitle.textContent = 'Add New Doctor to Hospital';
            
            // Update dynamic content
            dynamicContent.innerHTML = `
                <p>Use this form to register a new doctor to the hospital system. All fields are required unless marked optional.</p>
                
                <div style="background-color: #f9f9f9; padding: 25px; border-radius: 10px; margin-top: 20px;">
                    <h3 style="color: #2c3e50; margin-bottom: 20px;">Doctor Registration Form</h3>
                    
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 25px;">
                        <div>
                            <label style="display: block; margin-bottom: 8px; font-weight: 600;">Full Name</label>
                            <input type="text" style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 6px;" placeholder="Dr. Firstname Lastname">
                        </div>
                        <div>
                            <label style="display: block; margin-bottom: 8px; font-weight: 600;">Specialization</label>
                            <input type="text" style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 6px;" placeholder="Cardiology, Neurology, etc.">
                        </div>
                    </div>
                    
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 25px;">
                        <div>
                            <label style="display: block; margin-bottom: 8px; font-weight: 600;">Department</label>
                            <select style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 6px;">
                                <option>Select Department</option>
                                <option>Cardiology</option>
                                <option>Neurology</option>
                                <option>Orthopedics</option>
                                <option>Pediatrics</option>
                                <option>Emergency Medicine</option>
                            </select>
                        </div>
                        <div>
                            <label style="display: block; margin-bottom: 8px; font-weight: 600;">Email Address</label>
                            <input type="email" style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 6px;" placeholder="doctor@hospital.com">
                        </div>
                    </div>
                    
                    <div style="margin-bottom: 25px;">
                        <label style="display: block; margin-bottom: 8px; font-weight: 600;">Qualifications</label>
                        <textarea style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 6px; height: 100px;" placeholder="MD, MBBS, PhD, etc."></textarea>
                    </div>
                    
                    <button style="background-color: #3c97ff; color: white; border: none; padding: 14px 30px; border-radius: 8px; font-weight: 600; cursor: pointer; font-size: 16px;">
                        <i class="fas fa-user-plus" style="margin-right: 10px;"></i> Register Doctor
                    </button>
                </div>
            `;
        });

        // Doctors List Navigation
        doctorsListBtn.addEventListener('click', (e) => {
            e.preventDefault();
            setActiveNavItem(doctorsListBtn);
            
            // Update page content
            pageTitle.textContent = 'Doctors List';
            pageInfo.textContent = 'Viewing All Doctors';
            contentTitle.textContent = 'Doctors List';
            
            // Update dynamic content
            dynamicContent.innerHTML = `
                <p>This table displays all doctors currently registered in the hospital system. You can filter, search, and manage individual doctor records.</p>
                
                <div style="overflow-x: auto; margin-top: 20px;">
                    <table style="width: 100%; border-collapse: collapse;">
                        <thead>
                            <tr style="background-color: #f8f9fa;">
                                <th style="padding: 15px; text-align: left; border-bottom: 2px solid #dee2e6;">Doctor Name</th>
                                <th style="padding: 15px; text-align: left; border-bottom: 2px solid #dee2e6;">Specialization</th>
                                <th style="padding: 15px; text-align: left; border-bottom: 2px solid #dee2e6;">Department</th>
                                <th style="padding: 15px; text-align: left; border-bottom: 2px solid #dee2e6;">Status</th>
                                <th style="padding: 15px; text-align: left; border-bottom: 2px solid #dee2e6;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr style="border-bottom: 1px solid #dee2e6;">
                                <td style="padding: 15px;">Dr. Sarah Johnson</td>
                                <td style="padding: 15px;">Cardiology</td>
                                <td style="padding: 15px;">Heart Center</td>
                                <td style="padding: 15px;"><span style="background-color: #d4edda; color: #155724; padding: 5px 12px; border-radius: 20px; font-size: 13px;">Active</span></td>
                                <td style="padding: 15px;">
                                    <button style="background-color: #e8f4fc; color: #3c97ff; border: none; padding: 8px 15px; border-radius: 6px; margin-right: 8px; cursor: pointer;">View</button>
                                    <button style="background-color: #fff5e6; color: #f39c12; border: none; padding: 8px 15px; border-radius: 6px; cursor: pointer;">Edit</button>
                                </td>
                            </tr>
                            <tr style="border-bottom: 1px solid #dee2e6;">
                                <td style="padding: 15px;">Dr. Michael Chen</td>
                                <td style="padding: 15px;">Neurology</td>
                                <td style="padding: 15px;">Neuro Center</td>
                                <td style="padding: 15px;"><span style="background-color: #d4edda; color: #155724; padding: 5px 12px; border-radius: 20px; font-size: 13px;">Active</span></td>
                                <td style="padding: 15px;">
                                    <button style="background-color: #e8f4fc; color: #3c97ff; border: none; padding: 8px 15px; border-radius: 6px; margin-right: 8px; cursor: pointer;">View</button>
                                    <button style="background-color: #fff5e6; color: #f39c12; border: none; padding: 8px 15px; border-radius: 6px; cursor: pointer;">Edit</button>
                                </td>
                            </tr>
                            <tr style="border-bottom: 1px solid #dee2e6;">
                                <td style="padding: 15px;">Dr. Robert Williams</td>
                                <td style="padding: 15px;">Orthopedics</td>
                                <td style="padding: 15px;">Bone & Joint</td>
                                <td style="padding: 15px;"><span style="background-color: #fff3cd; color: #856404; padding: 5px 12px; border-radius: 20px; font-size: 13px;">On Leave</span></td>
                                <td style="padding: 15px;">
                                    <button style="background-color: #e8f4fc; color: #3c97ff; border: none; padding: 8px 15px; border-radius: 6px; margin-right: 8px; cursor: pointer;">View</button>
                                    <button style="background-color: #fff5e6; color: #f39c12; border: none; padding: 8px 15px; border-radius: 6px; cursor: pointer;">Edit</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                
                <div style="margin-top: 25px; display: flex; justify-content: space-between; align-items: center;">
                    <div style="color: #6c757d;">Showing 3 of 24 doctors</div>
                    <button style="background-color: #f8f9fa; color: #6c757d; border: 1px solid #dee2e6; padding: 10px 20px; border-radius: 6px; cursor: pointer;">Load More Doctors</button>
                </div>
            `;
        });

        // Add Department Navigation
        addDepartmentBtn.addEventListener('click', (e) => {
            e.preventDefault();
            setActiveNavItem(addDepartmentBtn);
            
            // Update page content
            pageTitle.textContent = 'Add Department';
            pageInfo.textContent = 'Create New Department';
            contentTitle.textContent = 'Add New Department';
            
            // Update dynamic content
            dynamicContent.innerHTML = `
                <p>Use this form to create a new medical department or specialty unit in the hospital. Departments help organize doctors and services.</p>
                
                <div style="background-color: #f9f9f9; padding: 25px; border-radius: 10px; margin-top: 20px;">
                    <h3 style="color: #2c3e50; margin-bottom: 20px;">Department Creation Form</h3>
                    
                    <div style="margin-bottom: 25px;">
                        <label style="display: block; margin-bottom: 8px; font-weight: 600;">Department Name</label>
                        <input type="text" style="width: 100%; max-width: 500px; padding: 12px; border: 1px solid #ddd; border-radius: 6px;" placeholder="Cardiology, Emergency Medicine, etc.">
                    </div>
                    
                    <div style="margin-bottom: 25px;">
                        <label style="display: block; margin-bottom: 8px; font-weight: 600;">Department Head</label>
                        <select style="width: 100%; max-width: 500px; padding: 12px; border: 1px solid #ddd; border-radius: 6px;">
                            <option>Select Department Head</option>
                            <option>Dr. Sarah Johnson</option>
                            <option>Dr. Michael Chen</option>
                            <option>Dr. Robert Williams</option>
                            <option>Assign Later</option>
                        </select>
                    </div>
                    
                    <div style="margin-bottom: 25px;">
                        <label style="display: block; margin-bottom: 8px; font-weight: 600;">Description</label>
                        <textarea style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 6px; height: 120px;" placeholder="Describe the department's purpose, services, and specialties..."></textarea>
                    </div>
                    
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 25px;">
                        <div>
                            <label style="display: block; margin-bottom: 8px; font-weight: 600;">Floor / Location</label>
                            <input type="text" style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 6px;" placeholder="3rd Floor, West Wing">
                        </div>
                        <div>
                            <label style="display: block; margin-bottom: 8px; font-weight: 600;">Contact Extension</label>
                            <input type="text" style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 6px;" placeholder="Extension 4567">
                        </div>
                    </div>
                    
                    <button style="background-color: #2ecc71; color: white; border: none; padding: 14px 30px; border-radius: 8px; font-weight: 600; cursor: pointer; font-size: 16px;">
                        <i class="fas fa-clinic-medical" style="margin-right: 10px;"></i> Create Department
                    </button>
                </div>
            `;
        });


        // Close sidebar when clicking outside on mobile
        document.addEventListener('click', (e) => {
            if (window.innerWidth <= 992) {
                if (!adminSidebar.contains(e.target) && e.target !== mobileToggle && !mobileToggle.contains(e.target)) {
                    adminSidebar.classList.remove('open');
                }
            }
        });

        // Close sidebar on window resize
        window.addEventListener('resize', () => {
            if (window.innerWidth > 992) {
                adminSidebar.classList.remove('open');
            }
        });
    </script>